<form id="{{formId}}">
    <div class="form-group required">
        <input id="{{inputId}}" value=selectedFile type="file" accept={{acceptValue}} {{action "fileChosen" on="change"}}>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-sm btn-default" {{action "doCancel"}}>Cancel</button>
        <button type="button" class="btn btn-sm btn-primary" {{action "doUpload"}}>{{uploadButtonTitle}}</button>
    </div>
</form>

